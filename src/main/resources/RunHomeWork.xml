<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="ДЗ сюит урок 9">
    <!--=========== группы =================================================== -->
    <!--    default     - обычный набор тестов Test.class                      -->
    <!--    after       - вкл @AfterMethod таргетно                            -->
    <!--    g2          - группой g2 добавляем чего не хватает по дефолту      -->
    <!--    testDataInt - дает дополнительный AfterMethod для Test data: 1 2   -->
    <!--====================================================================== -->
    <test name="Блок тест1">
        <groups>
            <run>
                <include name="default"/>
                <include name="after"/>         <!-- вкл @AfterMethod таргетно-->
            </run>
        </groups>
        <classes>
            <class name="lesson_9.HomeWork.Test"/>
        </classes>
    </test>
    <test name="Блок тест2">
        <groups>
            <run>
                <include name="default"/>
                <include name="g2"/>            <!-- группой g2 добавляем чего не хватает по дефолту-->
            </run>
        </groups>
        <classes>
            <class name="lesson_9.HomeWork.Test"/>
        </classes>
    </test>
    <test name="Блок тест3">
        <classes>
            <class name="lesson_9.HomeWork.LastClass"/>
        </classes>
    </test>
</suite>